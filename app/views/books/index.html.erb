<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<div id="books">
  <% @books.each do |book| %>
    <%= render book %>
    <p>
      <%= link_to "Show this book", book %> |
      <%= link_to "Edit this book", edit_book_path(book) %> |
      <%= link_to "Destroy this book", "/books/delete/" + book.id.to_s %>
    </p>
  <% end %>
</div>

<%= link_to "New book", new_book_path %>
